<div class="card-columns">
  <div class="card">
    <div class="card-header">
      <h4>Elèves présents</h4>
    </div>
    <div class="card-body">
      <table class="table table-sm table-borderless">
        <thead>
          <tr>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Clase</th>
          </tr>
        </thead>
          <tbody>
          <% @student_attended.each do |student_work_session| %>
            <tr>
              <td><%= student_work_session.student.last_name %></td>
              <td><%= student_work_session.student.first_name %></td>
              <td><%= "#{student_work_session.student.sections.last.level}#{student_work_session.student.sections.last.sub_section}" %></td>
            </tr>
            <% end %>
        </tbody>
      </table> 
    </div>
    </div>

  <div class="card">
  <%= form_with url: update_work_session_roll_call_path, local: true do |f| %>
    <div class="card-header">
      <h4>Sélectionner les élèves présents</h4>
    </div>
    <table class="table table-sm table-striped">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Nom</th>
          <th scope="col">Prénom</th>
          <th scope="col">Clase</th>
        </tr>
      </thead>
        <tbody>
        <% @student_work_sessions.each do |student_work_session| %>
          <tr>
            <td><input type="checkbox" value="<%= student_work_session.id %>" name="student_work_session[attended][]"> </td>
            <td><%= student_work_session.student.last_name %></td>
            <td><%= student_work_session.student.first_name %></td>
            <td><%= "#{student_work_session.student.sections.last.level}#{student_work_session.student.sections.last.sub_section}" %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
    <div class="card-footer">
      <%= f.submit 'Valider', class: "btn btn-primary mt-3 " %>
      <%= link_to "Retour", work_session_path, class:"btn btn-info mt-3" %>
    </div>
  </div>
  <% end %>
</div>

