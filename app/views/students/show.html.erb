<h1 class="h3 mb-3">Élève n°<%= @student.id%></h1>

<div class="card-columns"> 
  <div class="card">
    <div class="card-body"> 
      <p>
        <strong>Prénom:</strong>
        <%= @student.first_name %>
      </p>

      <p>
        <strong>Nom:</strong>
        <%= @student.last_name %>
      </p>

      <p>
        <strong>Classe:</strong>
        <%= @student.sections.last.level %><%= @student.sections.last.sub_section %>
      </p>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <h6 class="h6">Compétences étudiées</h6> 
    </div>
    <div class="card-body">
      <ul class="list list-unstyled">
        <% if @skills_recap %>
        <% @skills_recap.each { |skill_and_count| %>
          <li><a href="<%= skill_path(skill_and_count[0].id) %>"><%= skill_and_count[0].name %></a> - étudié <%= skill_and_count[1] %> fois</li>
        <% } %> 
        <% end %>
      </ul>
    </div>
  </div>
</div>


<%= link_to 'Modifier', edit_student_path(@student), class:"btn btn-secondary mt-3" %>
<%= link_to "Retour", students_path, class:"btn btn-info mt-3" %>
