<h2>Séances</h2>
<div class="card">
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Créneau</th>
          <th>Classe</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @work_sessions.each do |work_session|%>
          <tr>
            <td><%= work_session.date.to_s(:long) %></td>
            <td><%= work_session.daily_schedule %></td>
            <td></td>
            <td><%= link_to "Editer", edit_work_session_path(work_session.id), class: "btn btn-secondary" %> <%= link_to "Voir plus", work_session_path(work_session.id), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
