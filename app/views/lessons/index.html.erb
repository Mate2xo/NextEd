<h2>Séances</h2>
<div class="card">
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Créneau</th>
          <th>Classe</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @lessons.each do |lesson|%>
          <tr>
            <td><%= lesson.date %></td>
            <td><%= lesson.daily_schedule %></td>
            <td></td>
            <td><%= link_to "Editer", edit_lesson_path(lesson.id), class: "btn btn-secondary" %> <%= link_to "Voir plus", lesson_path(lesson.id), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
